<%= form_with url: '/flights/', method: :get do |search_form| %>
  <%= search_form.collection_select :departure_airport_id, Airport.order(:code), :id, :code, selected: params[:departure_airport_id] %>
  <%= search_form.collection_select :arrival_airport_id, Airport.order(:code), :id, :code, selected: params[:arrival_airport_id] %>
  <%= search_form.submit %>
<% end %>
